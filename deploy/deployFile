pipeline {
    agent any

    stages {
        stage('Remove running container') {
            steps {
                script {
                    def containerExists = powershell(script: 'docker ps -a -q -f name=mycycleapp', returnStdout: true).trim()
                    if (containerExists) {
                        powershell 'docker stop mycycleapp'
                        powershell 'docker rm mycycleapp'
                    } else {
                        echo 'No existing container named mycycleapp'
                    }
                }
            }
        }
    }
    post {
        always {
            powershell 'docker run --name mycycleapp -d -p 8090:8090 myapps/mycycleapp:latest'
            powershell 'docker image ls'
            powershell 'docker container ls'
        }
    }
}
