pipeline {
    agent any

    stages {
        stage('Remove running container') {
            steps {
                script {
                    def containerExists = powershell(script: 'docker ps -a -q -f name=mycycleapp', returnStdout: true).trim()
                    if (containerExists) {
                        echo 'Container exists. Removing container'
                        powershell 'docker stop mycycleapp'
                        powershell 'docker rm mycycleapp'
                    }
                }
            }
        }

        stage('Deploy My Cycle app') {
            steps {
                echo 'Deploying my cycle app..'
                bat 'docker run --name mycycleapp -d -p 8090:8090 myapps/mycycleapp:latest'
                bat 'docker image ls'
                bat 'docker container ls'
                echo 'Deployed my cycle app successfully'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed'
        }
    }
}
